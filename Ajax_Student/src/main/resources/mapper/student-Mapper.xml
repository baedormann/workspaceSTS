<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 모든 SQL문을 item태그 안에 작성 -->
<mapper namespace="studentMapper">
	<resultMap type="com.kh.shop.vo.ClassVO" id="classInfo">
		<id column="CLASS_CODE" property="classCode"/>
		<result column="CLASS_NAME" property="className"/>
	</resultMap>
	<resultMap type="com.kh.shop.vo.StudentVO" id="stuInfo">
		<id column="STU_NUM" property="stuNum"/>
		<result column="STU_NAME" property="stuName"/>	
		<result column="KOR_SCORE" property="korScore"/>	
		<result column="ENG_SCORE" property="engScore"/>	
		<result column="CLASS_CODE" property="classCode"/>	
		<result column="CLASS_NAME" property="className"/>	
	</resultMap>
	
	<select id="selectClassList" resultMap="classInfo">
		SELECT CLASS_CODE
			, CLASS_NAME
		FROM CLASS_INFO
	</select>
	<select id="selectStudentList" resultMap="stuInfo">
		SELECT STU_NUM
			, STU_NAME
			, KOR_SCORE
			, ENG_SCORE
			, CLASS.CLASS_NAME
		FROM STUDENT_INFO STUDENT, CLASS_INFO CLASS
		WHERE STUDENT.CLASS_CODE = CLASS.CLASS_CODE
		<if test="classCode != null and !classCode.equals('')">
			AND STUDENT.CLASS_CODE = #{classCode}
		</if>
		ORDER BY STU_NUM DESC
	</select>
	<select id="selectStudentDetail">
		SELECT STU_NUM
			, STU_NAME
			, KOR_SCORE
			, ENG_SCORE
		FROM STUDENT_INFO
		WHERE STU_NUM = #{stuNum}
	</select>
</mapper>
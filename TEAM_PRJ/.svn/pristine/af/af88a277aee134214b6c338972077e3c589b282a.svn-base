// 우편번호 검색 API
function execDaumPostcode() {
	new daum.Postcode({
		oncomplete: function(data) {
			// 우편번호와 주소 정보를 해당 필드에 넣는다.
			document.getElementById("addr").value = data.roadAddress;
		}
	}).open();
}


	weekStart: 0, //달력 시작 요일 선택하는 것 기본값은 0인 일요일
	language: 'kr', //달력의 언어 선택, 그에 맞는 js로 교체해줘야한다.
});

// 회원가입 버튼 비활성화
const joinTarget = document.querySelector('#joinForm button[type=submit]');
joinTarget.disabled = true;

// 회원가입 버튼 활성화 및 비밀번호 체크
let pwCheck = false; // 비밀번호 체크 확인 여부
const joinPw = document.getElementById('inputPassword'); // 비밀번호
const joinPwCheck = document.getElementById('inputPasswordCheck'); // 2차 비밀번호

function checkPw() { // 비밀번호 체크
	if (joinPw.value.length < 8) { // 비밀번호가 8자 미만 일 때
		joinPw.style.borderColor = 'red'; // 빨간 테두리로 표시
	} else { // 8자 이상 일 때
		joinPw.style.borderColor = '#ced4da'; // 테두리 원색으로 표시
		
		if (joinPw.value == joinPwCheck.value) { // 
			joinPwCheck.style.borderColor = '#ced4da';
			pwCheck = true;
		} else {
			joinPwCheck.style.borderColor = 'red';
			pwCheck = false;
		}
	}

	
	if (joinPwCheck.value.length == 0) {
		joinPwCheck.style.borderColor = '#ced4da';
	}
	
	
	 
	if (pwCheck) {
		joinTarget.disabled = false;
	} else {
		joinTarget.disabled = true;
	}
}

